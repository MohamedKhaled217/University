<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile</title>
    <link rel="stylesheet" href="profile.css">
</head>

<body>
    <div class="container">
        <section class="card123">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            @if (Model.Image == null)
                            {
                            @if(Model.Gender=="male")
                            {
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                                alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                            }else{
                            <img src="~/images/football-player.png" alt="avatar" class="rounded-circle img-fluid"
                                style="width: 150px;">
                            }


                            }
                            else
                            {

                            <img src="~/Profile/Photo/@Model.Image" class="img-fluid rounded-circle p-3" alt=" Image"
                                style="max-height: 250px;">
                            }


                            <p class="text-muted mb-1" style="border:1px solid var(--highlight-color);width: 70%; padding:10px;text-align: center; margin-left:20px">@Model.Info</p>
                            <p class="text-muted mb-0"style="border:1px solid var(--highlight-color);width: 70%; padding:10px;text-align: center; margin-left:20px">@Model.Address</p>



                            <div class="d-flex justify-content-center mb-2">
                            </div>
                        </div>

                        <div class="Update-Profile">
                            <button asp-controller="Account" onclick="window.location.href = 'UpdateProfile';"
                                type="button" class="btn btn-danger"
                                style="margin-top:0px;margin-left: 65px;margin-bottom: 30px;width: 250px; margin-top:10px;">Update
                                Profile </button>
                        </div>

                    </div>
                </div>
            </div>
        </section>

        <section class="info ">
            <div class="col-lg-8"
                style=" border:4px solid var(--highlight-color);background-color: var(--secondary-color);padding: 17px; border-radius: 10px;width:450px;">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>

                            <div class="col-sm-9">
                                <p class="text-muted mb-0"style="border:1px solid var(--highlight-color);width: 70%; padding:10px; margin-left:20px">@Model.FirstName + @Model.MiddleName +@Model.LastName</p>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>

                            <div class="col-sm-9">
                                <p class="text-muted mb-0"style="border:1px solid var(--highlight-color);width: 70%; padding:10px; margin-left:20px">@Model.Email</p>
                            </div>

                        </div>
                      
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>

                            <div class="col-sm-9">
                                <p class="text-muted mb-0"style="border:1px solid var(--highlight-color);width: 70%; padding:10px; margin-left:20px">@Model.PhoneNumber</p>
                            </div>

                        </div>


                    </div>
                </div>
            </div>

            <div class="col-lg-8"
                style=" border:4px solid var(--highlight-color);background-color: var(--secondary-color);padding: 10px; border-radius: 10px;margin-top:20px;height: 180px;">
                <div class="card mb-4">
                    <div class="card-body">
                        <dotlottie-player
                            src="https://lottie.host/ec953b9c-eb66-44e1-8f50-9042f1c875da/9GG42LqZtR.lottie"
                            background="transparent" speed="1" style="width: 350px; height: 200px ; margin-left:35px"loop 
                            autoplay></dotlottie-player>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="~/js/LoginPage.js"></script>
    <script src="https://unpkg.com/@@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs" type="module"></script>
</body>

</html>

