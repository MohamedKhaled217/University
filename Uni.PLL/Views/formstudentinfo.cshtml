<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.querySelector('form');
        if (!form) return; // guard in case there’s no <form> on the page

        // 1. Apply initial “hidden” styles
        form.style.display = 'none';
        form.style.opacity = '0';
        form.style.transform = 'translateX(-20px)';
        form.style.transition = 'opacity 1s ease-in-out, transform 1s ease-in-out';

        // 2. After 1.5s, make it visible and let CSS handle the fade/slide
        setTimeout(() => {
            form.style.display = 'flex';    // or 'block' / whatever your layout needs
            form.style.opacity = '1';
            form.style.transform = 'translateX(0)';
        }, 1500);
    });
</script>

